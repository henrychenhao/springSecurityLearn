<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    <mapper namespace="com.henry.security01.mapper.PermissionMapper">

        <!-- 通用查询映射结果 -->
        <resultMap id="BaseResultMap" type="com.henry.security01.model.Permission">
            <id column="id" property="id" />
            <result column="pa" property="parentId" />
            <result column="name" property="name" />
            <result column="enname" property="enname" />
            <result column="url" property="url" />
            <result column="description" property="description" />
        </resultMap>
        <select id="selectByUserId" resultType="com.henry.security01.model.Permission">
            select
                id id,
                parent_id parentId,
                `name` name,
                enname enname,
                url url,
                description description
            from tb_permission where parent_id = #{id}
        </select>
</mapper>
